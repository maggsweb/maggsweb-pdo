{
    "name": "maggsweb/maggsweb-pdo",
    "description": "PDO Database Wrapper for PHP",
    "type": "library",
    "keywords": ["php","pdo","mysql","database"],
    "homepage": "https://maggsweb.github.io/maggsweb-pdo/",
    "license": "gpl-3.0",
    "authors": [
        {
            "name": "Chris Maggs",
            "email": "git@maggsweb.co.uk"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mysqli": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.1"
        },
        "platform-dev": {
            "php": "7.1"
        }
    }
}
